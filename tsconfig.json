{
	"compilerOptions": {
    "lib": [
      "es6",
      "es2017",
      "dom"
    ],
    "allowJs": true,
    "checkJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "pretty": true,
    "removeComments": false,
    "sourceMap": false,
    "target": "es6",
    "outDir": "dist",
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "esModuleInterop": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
